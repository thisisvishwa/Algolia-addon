<odoo>
    <data>

        <!-- Inherit the product.template form view to add Algolia settings -->
        <record id="view_product_template_algolia_form" model="ir.ui.view">
            <field name="name">product.template.algolia.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group name="algolia_settings" string="Algolia Settings">
                        <group>
                            <field name="is_algolia_indexed" widget="checkbox"/>
                            <label for="is_algolia_indexed" string="Indexed in Algolia"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Inherit the product.template search view to add Algolia search filters -->
        <record id="view_product_template_algolia_search" model="ir.ui.view">
            <field name="name">product.template.algolia.search</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.view_product_template_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter string="Indexed in Algolia" name="filter_algolia_indexed" domain="[('is_algolia_indexed', '=', True)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>