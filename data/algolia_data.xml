<odoo>
    <data noupdate="1">
        <!-- Algolia API Credentials -->
        <record id="algolia_settings" model="ir.config_parameter">
            <field name="key">algolia_integration.algolia_api_key</field>
            <field name="value" eval="'ALGOLIA_API_KEY'"/>
        </record>
        <record id="algolia_app_id" model="ir.config_parameter">
            <field name="key">algolia_integration.algolia_app_id</field>
            <field name="value" eval="'ALGOLIA_APP_ID'"/>
        </record>
        <record id="algolia_index_name" model="ir.config_parameter">
            <field name="key">algolia_integration.algolia_index_name</field>
            <field name="value" eval="'ALGOLIA_INDEX_NAME'"/>
        </record>
    </data>
</odoo>